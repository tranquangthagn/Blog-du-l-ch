@model IEnumerable<Blog_du_lịch.Models.Travel>

@{
    ViewData["Title"] = "Travels in Việt Nam";
}

<p> Travels Blog</p>
<div class="mb-3">
    <a asp-action="Create" class="btn btn-outline-primary">Tạo bài viết mới</a>
</div>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descriptions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emotions)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-route-id="@item.Id" asp-action="Details">@item.Name</a>
            </td>
            <td>
                @item.Adress
            </td>
             <td>
                @item.Year
            </td>

            <td>
                @item.Descriptions
            </td>
            <td>
                @item.Emotions
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"> Chi tiết </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Chỉnh sửa</a>
                <a asp-action="Read" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark"> Đọc thêm </a>


            </td>
        </tr>
}
<tr><td colspan="10">Tổng có: @Model.Count() khu du lịch</td></tr>
    </tbody>
</table>
